type User {
  id: ID! @id
  username: String! @unique
  password: String!
  routines: [Routine]
}

type Day {
  id: ID! @id
  date: DateTime!
  isCompleted: Boolean!
  partOf: Routine! @relation(name: "RoutineOnDay")
}

type Routine {
  id: ID! @id
  name: String!
  ownedBy: User!
  days: [Day]! @relation(name: "RoutineOnDay", onDelete: CASCADE)
}
